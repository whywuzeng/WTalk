<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >
    <ImageView
        android:id="@+id/im_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/len_48"
        android:minHeight="@dimen/len_48"
        android:maxWidth="@dimen/len_100"
        android:maxHeight="@dimen/len_100"
        android:scaleType="centerInside"
        android:src="@drawable/ic_status_empty"
        android:tint="@color/textSecond"
        />

    <net.qiujuer.genius.ui.widget.Loading
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/len_60"
        android:minHeight="@dimen/len_60"
        android:visibility="gone"
        app:gAutoRun="false"
        app:gBackgroundColor="@null"
        app:gForegroundColor="@color/colorAccent"
        app:gForegroundLineSize="@dimen/len_2"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/txt_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Small"
        tools:text="@string/prompt_empty"
        android:layout_marginTop="@dimen/len_20"
        android:layout_marginBottom="@dimen/len_20"
        android:textColor="@color/textSecond"
        />

</LinearLayout>